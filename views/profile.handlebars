<form>
    <div class="grid-container formStyle">
        <div class="grid-x grid-padding-x">
            <div class="cell medium-12">
                <h3 class="text-center profileHead">Create your user profile</h3>
            </div>
        </div>
        <br>
        <div class="grid-x grid-padding-x">
            <div class="medium-6 cell">
                <label class="text-center">First Name
                    <input class="text-center" type="text" id="firstName" placeholder="First">
                </label>
            </div>
            <div class="medium-6 cell">
                <label class="text-center">Last Name
                    <input class="text-center" type="text" id="lastName" placeholder="Last">
                </label>
            </div>
        </div>
        <div class="grid-x grid-padding-x">
            <div class="medium-6 cell">
                <label class="text-center">Phone #
                    <input class="text-center" type="text" id="phone" placeholder="(xxx)xxx-xxxx">
                </label>
            </div>
            <div class="medium-6 cell">
                <label class="text-center">Email
                    <input class="text-center" type="email" id="profileEmail" id="profile-email"
                        placeholder="email@email.edu">
                </label>
            </div>
        </div>
        <br>
        <button class="button" id="profileSave">Save Profile</button>
    </div>
</form>
<script src="../public/assets/js/profiles.js" type="text/javascript"></script>