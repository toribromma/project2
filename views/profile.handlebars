<form>
    <div class="grid-container formStyle">
        <div class="grid-x grid-padding-x">
            <div class="cell medium-12">
                <h3 class="text-center profileHead">Create your user profile</h3>
            </div>
        </div>
        <br>
        <div class="grid-x grid-padding-x">
            <div class="medium-6 cell">
                <label class="text-center">First Name
                    <input class="text-center" id="firstName" type="text" placeholder="First">
                </label>
            </div>
            <div class="medium-6 cell">
                <label class="text-center">Last Name
                    <input class="text-center" id="lastName" type="text" id="lastName" placeholder="Last">
                </label>
            </div>
        </div>
        <div class="grid-x grid-padding-x">
            <div class="medium-6 cell">
                <label class="text-center">Phone #
                    <input class="text-center" id="phone" type="text" placeholder="Phone # (xxx)xxx-xxxx">
                </label>
            </div>
            <div class="medium-6 cell">
                <label class="text-center">Budget
                    <input class="text-center" type="budget" id="budget" placeholder="6 gazillion dollars">
                </label>
            </div>
        </div>
        <br>
        <button class="button" id="profileSave">Save Profile</button>
    </div>
</form>
<script src="../public/assets/js/profiles.js" type="text/javascript"></script>

